                <!-- Menu Hamburger -->
                <button class="hamburger-btn" id="hamburgerBtn" onclick="toggleMobileMenu()">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </nav>

            <!-- Mobile Menu -->
            <div class="mobile-menu" id="mobileMenu">
                <!-- Top section: Login/Profile -->
                <div class="mobile-menu-top">
                    <div id="mobileLoginSection">
                        <button class="mobile-login-btn" onclick="closeMenuAndOpenAuth()">
                            üë§ Entrar / Cadastro
                        </button>
                    </div>
                    <div id="mobileUserSection" style="display: none;">
                        <div class="mobile-user-profile">
                            <div class="mobile-avatar" id="mobileUserAvatar">U</div>
                            <div class="mobile-user-info">
                                <a href="#" onclick="showProfile(); closeMobileMenu()">üë§ Meu Perfil</a>
                                <a href="#" onclick="showOrders(); closeMobileMenu()">üì¶ Meus Pedidos</a>
                                <a href="#" onclick="logout(); closeMobileMenu()">üö™ Sair</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navigation Links -->
                <ul class="mobile-nav-links">
                    <li><a href="/" onclick="closeMobileMenu()">üè† In√≠cio</a></li>
                    <li><a href="/categories" onclick="closeMobileMenu()">üè∑Ô∏è Categorias</a></li>
                    <li><a href="/#produtos" onclick="closeMobileMenu()">üç≤ Card√°pio</a></li>
                    <li><a href="/about" onclick="closeMobileMenu()">‚ÑπÔ∏è Sobre</a></li>
                </ul>

                <!-- Cart Button -->
                <div class="mobile-menu-bottom">
                    <button class="mobile-cart-btn" onclick="window.location.href='/admin'; closeMobileMenu()">
